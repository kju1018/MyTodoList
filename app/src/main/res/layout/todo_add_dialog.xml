<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/todo_add_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="일정 입력"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/todo_add_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="날짜" />

        <TextView
            android:id="@+id/todo_add_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="시간" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/todo_add_calendar_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_today_24"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/todo_add_calendar_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_today_black_24"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/todo_add_repeat_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/repeat_24"
            android:background="@android:color/transparent"
            android:layout_marginLeft="8dp"/>

        <ImageButton
            android:id="@+id/todo_add_repeat_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/repeat_black_24"
            android:background="@android:color/transparent"
            android:layout_marginLeft="8dp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/todo_add_time_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_24"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15dp"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/todo_add_time_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_24_black"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15dp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/todo_add_time_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer_reset_24"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15dp" />

<!--        <ImageButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/rank_24"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:layout_marginLeft="15dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/todo_add_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:src="@drawable/send_24" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>